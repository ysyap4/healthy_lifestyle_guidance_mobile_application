<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".healthyfoodsuggestion.DietaryNeeds"
    android:background="#81DAF5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subdietary_needs"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="60dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton"
                android:background="@drawable/vegetarian"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/breakfast"
                android:onClick="goToVegetarian"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/lowfat"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/lunch"
                android:onClick="goToLowFat"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/vegetarian"
                android:id="@+id/textView5"
                android:layout_marginStart="50dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/low_fat"
                android:id="@+id/textView6"
                android:layout_marginStart="72dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/sugarfree"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/sugar_free"
                android:onClick="goToSugarFree"/>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sugar_free"
                android:id="@+id/textView7"
                android:layout_marginStart="120dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
