<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".healthyfoodsuggestion.Course"
    android:background="#81DAF5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subcourse"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton"
                android:background="@drawable/breakfast"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/breakfast"
                android:onClick="goToBreakfast"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton2"
                android:background="@drawable/lunch"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/lunch"
                android:onClick="goToLunch"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/breakfast"
                android:id="@+id/textView5"
                android:layout_marginStart="50dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/lunch"
                android:id="@+id/textView6"
                android:layout_marginStart="85dp"
                android:textColor="#FA5882"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton3"
                android:background="@drawable/dinner"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/dinner"
                android:onClick="goToDinner"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton4"
                android:background="@drawable/sidedish"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/side_dish"
                android:onClick="goToSideDish"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dinner"
                android:id="@+id/textView7"
                android:layout_marginStart="70dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/side_dish"
                android:id="@+id/textView8"
                android:layout_marginStart="78dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton5"
                android:background="@drawable/soup"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/soup"
                android:onClick="goToSoup"/>

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/imageButton6"
                android:background="@drawable/drink"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/drink"
                android:onClick="goToDrink"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/soup"
                android:id="@+id/textView9"
                android:layout_marginStart="73dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/drink"
                android:id="@+id/textView10"
                android:layout_marginStart="100dp"
                android:textColor="#FA5882"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
