<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/af0"
            android:contentDescription="@string/af0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:id="@+id/imageButton7"
            android:background="@drawable/af1"
            android:contentDescription="@string/af1"
            android:onClick="goToAf1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/imageButton8"
            android:background="@drawable/af2"
            android:contentDescription="@string/af2"
            android:onClick="goToAf2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton9"
            android:background="@drawable/af3"
            android:contentDescription="@string/af3"
            android:onClick="goToAf3" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton10"
            android:background="@drawable/af4"
            android:contentDescription="@string/af4"
            android:onClick="goToAf4" />

    </LinearLayout>



</LinearLayout>

