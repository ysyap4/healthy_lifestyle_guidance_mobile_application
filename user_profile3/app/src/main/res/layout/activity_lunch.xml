<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ab0"
            android:contentDescription="@string/ab0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:id="@+id/imageButton7"
            android:background="@drawable/ab1"
            android:contentDescription="@string/aa1"
            android:onClick="goToAb1"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:id="@+id/imageButton8"
            android:background="@drawable/ab2"
            android:contentDescription="@string/aa2"
            android:onClick="goToAb2" />
    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ab3"
            android:contentDescription="@string/aa5"
            android:onClick="goToAb3" />

    </LinearLayout>

</LinearLayout>

